{
    "compilerOptions": {
        "alwaysStrict": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es6",
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outFile": "./built/app.js",
        "plugins": [
                { "name": "@fimbul/mithotyn" }
        ],
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
